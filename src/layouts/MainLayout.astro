---
const {
  title = 'Nat Watkins - Portfolio',
  description = 'UX researcher, designer, and front end developer.',
} = Astro.props;
// Import only the most commonly used font weights
import '@fontsource/ibm-plex-sans/400.css';
import '@fontsource/ibm-plex-sans/500.css';
import '@fontsource/ibm-plex-sans/600.css';
import '@fontsource/poppins/800.css';
import { isTransitionEnabled } from '../data';
import '../styles/styles.css';
import { ViewTransitions } from 'astro:transitions';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel="icon" type="image/png" href="/public/favicon.png">
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content={description} />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <!-- Preload critical font weights -->
    <link rel="preload" href="/_astro/@fontsource/ibm-plex-sans/400.css" as="style">
    <link rel="preload" href="/_astro/@fontsource/ibm-plex-sans/500.css" as="style">
    <title>{title}</title>
    {isTransitionEnabled && <ViewTransitions />}
  </head>
  <body class="min-h-screen">
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4">
        <slot />
      </div>
    </div>
  </body>
</html>
