---
const { contact } = Astro.props;
---

<a
  href={contact.link}
  target="_blank"
  rel="noopener noreferrer"
  class='group cursor-pointer flex w-full p-5 items-center justify-between transition duration-300 text-slate-900 hover:text-orange-700 border-b-2 hover:border-orange-700 hover:font-semibold'
>
  <p>{contact.name}</p>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    fill='none'
    viewBox='0 0 24 24'
    stroke-width='1.5'
    stroke='currentColor'
    class='size-6 hidden group-hover:block transition duration-0'
  >
    <path
      stroke-linecap='round'
      stroke-linejoin='round'
      d='M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3'></path>
  </svg>
</a>
