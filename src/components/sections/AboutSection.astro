---
import Section from '../Section.astro';
import SkillsBox from '../SkillsBox.astro';
const { aboutMe, skills } = Astro.props;
---

<Section styles='p-1' ids='about'>
  <div class=' w-full min-h-[80vh] flex flex-col lg:flex-row basis-0 gap-8 items-center px-4 md:px-6 lg:px-8 mb-32 md:mb-0'>
    <div class='box introduction w-full lg:w-1/2'>
      <div class='box-text'>
        <h3
          class='leading-[4rem] md:leading-[8rem] font-bold text-[4rem] md:text-[6rem]'
        >
          About Me
        </h3>
        <p
          class='mt-5 text-[1.2rem] text-slate-900'
        >
          {aboutMe}
        </p>
      </div>
    </div>
    <div
      class='info-box w-full lg:w-1/2 justify-start flex flex-col gap-5'
    >
      <h3 class='heading text-slate-900 uppercase font-semibold'>Skills</h3>
      <SkillsBox skills={skills} />
    </div>
  </div>
</Section>
