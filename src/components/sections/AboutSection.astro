---
import Section from '../Section.astro';
import SkillsBox from '../SkillsBox.astro';
const { aboutMe, skills, workExperiences } = Astro.props;
---

<Section styles='p-1' ids='about'>
  <div class='flex flex-col lg:flex-row gap-12 items-center pb-40 md:pb-80'>
    <div class='box introduction w-full lg:w-1/2'>
      <div class='box-text'>
        <h3 class='leading-[4rem] md:leading-[8rem] font-bold text-[4rem] md:text-[6rem]'>
          About Me
        </h3>
        <p class='mt-5 text-[1.2rem] text-slate-900'>
          {aboutMe}
        </p>
      </div>
    </div>
    <div class='info-box w-full lg:w-1/2 justify-start flex flex-col gap-4'>
      <h3 class='heading text-slate-900 uppercase font-semibold pl-2'>
        Skills
      </h3>
      <SkillsBox skills={skills} />
    </div>
  </div>
</Section>